
@model ProductEntity.Product
<div>
    <hr />
    <a asp-controller="Product" asp-action="Index">Product Entry</a>
    <hr />
</div>
<form method="post" enctype="multipart/form-data">
    <h2>Product Entry</h2><hr />
    <div class="form-group">
        <label>Product Name</label>
        <input type="text" asp-for="ProductName" class="form-control"
               placeholder="enter product name" required />
    </div>
    <div class="form-group">
        <label>Product Code</label>
        <input type="text" asp-for="ProductCode" class="form-control"
               placeholder="enter product name"  />
    </div>
    <div class="form-group">
        <label>Product Year</label>
        <input type="text" asp-for="ProductYear" class="form-control"
               placeholder="enter product year" required />
    </div>
    <div class="form-group">
        <label>Channel Id </label>
        <input type="text" asp-for="ChannelId" class="form-control"
               placeholder="enter channel id" required />
    </div>
    <div class="form-group">
        <label>Created Date</label>
        <input type="datetime-local" asp-for="CreatedDate" class="form-control"
               placeholder="enter created by" required />
    </div>
    <div class="form-group">
        <label>Created By</label>
        <input type="text" asp-for="CreatedBy" class="form-control"
               placeholder="enter created by" required />
    </div>
 
    <input type="submit" value="Save" class="btn btn-outline-success" />
    <input type="button" value="Reset" class="btn btn-outline-secondary" />
    <hr />
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }
</form>
